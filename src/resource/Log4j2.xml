<?xml version="1.0" encoding="UTF-8"?>
<!--OFF > FATAL > ERROR > WARN > INFO > DEBUG > TRACE > ALL-->
<configuration status="debug" name="PropertiesConfig">

    <appenders>
        <Console name="stdout" type="Console">
            <PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"/>
        </Console>

        <RollingFile name="dailyfile" fileName="C:/logs/system_notice.log" filePattern="C:/logs/daily/daily-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <Pattern>[%-5level] [%d{yyyy/MM/dd HH:mm:ss:SSS} %C-%M] : %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

    </appenders>

    <loggers>
        <root level="debug">
            <appender-ref ref="stdout"/>
            <appender-ref ref="dailyfile"/>
        </root>
    </loggers>
</configuration>
